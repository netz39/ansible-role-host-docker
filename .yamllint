---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  empty-lines:
    max: 3
  line-length: disable
  octal-values:
    forbid-implicit-octal: true
  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'
